@model List<Kaasht_Kart.Models.VendorProductModel>


<div class="container mt-4">
    <div class="card p-3">
        <div class="card-body ">
            <table class="table table-responsive mydatatable">
                <thead class="table-dark text-center">
                    <tr>
                        <th>#</th>
                        <th>Image</th>
                        <th>Sub Image</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price (₹)</th>
                        <th>Discount (%)</th>
                        <th>Final Price (₹)</th>
                        <th>Stock</th>
                        <th>Unit</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@i</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ProductImage))
                                    { 
                                        <button class="btn btn-sm btn-success viewMainBtn p-2 fs-4"
                                                data-image="~/Content/VendorDocs/venderproduct/mainimage/@item.ProductImage">
                                            <i class="fa fa-eye"></i> 
                                        </button>
                                    }
                                    else
                                    {
                                        <span>No Image</span>
                                    }
                                </td>

                                <td style="width:50px;">
                                    @if (item.productsubimage != null && item.productsubimage.Count > 0)
                                    {
                                        <button class="btn btn-sm btn-success viewSubBtn p-2 fs-5"
                                                data-images='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(item.productsubimage))'>
                                            <i class="fa fa-eye"></i>  <i class="fas fa-image"></i> All
                                        </button>
                                    }
                                    else
                                    {
                                        <span>No Sub Images</span>
                                    }
                                </td>

                                <td>@item.ProductName</td>
                                <td>@item.categoryname</td>
                                <td>@item.Price</td>
                                <td>@item.Discount</td>
                                <td>@Convert.ToInt64(item.FinalPrice)</td>
                                <td>@item.StockQuantity</td>
                                <td>@item.unitquantity @item.Unit</td>
                                <td >
                                    @item.Description
                                </td>

                                <td>
                                    @if (Convert.ToBoolean(item.Status))
                                    {
                                        <span class="badge bg-success p-3">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger p-3">Inactive</span>
                                    }
                                </td>

                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center text-danger fw-bold">
                                No Products Found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<div class="modal fade" id="mainImgModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body text-center">
