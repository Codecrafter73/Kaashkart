<script>

    $(document).ready(function () {

        // 🧮 Auto-calculate Final Price
        $("input[name='price'], input[name='discount']").on("input", function () {
            const price = parseFloat($("input[name='price']").val()) || 0;
            const discount = parseFloat($("input[name='discount']").val()) || 0;
            const finalPrice = price - (price * discount / 100);
            $("input[name='finalprice']").val(finalPrice.toFixed(2));
        });

        // 🧾 Submit Product Form with Images
        $("#productForm").on("submit", function (e) {
            e.preventDefault();

            // ✅ Basic Validation
            let productName = $("input[name='productname']").val();
            let price = $("input[name='price']").val();
            let vendorId = $("input[name='vendorid']").val();

            if (!vendorId || vendorId == "0") {
                Swal.fire("Vendor ID Missing!", "Vendor not identified!", "warning");
                return;
            }
            if (!productName) {
                Swal.fire("Product Name Required!", "Please enter a product name.", "warning");
                return;
            }
            if (!price || price <= 0) {
                Swal.fire("Invalid Price!", "Please enter a valid price.", "warning");
                return;
            }

            let formData = new FormData(this);

            $.ajax({
                url: "/Vender/addvenderproduct",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,

                beforeSend: function () {
                    $(".btn-custom").prop("disabled", true)
                        .html('<i class="fas fa-spinner fa-spin"></i> Saving...');
                },

                success: function (response) {
                    $(".btn-custom").prop("disabled", false)
                        .html('<i class="fas fa-check-circle me-2"></i> Save Product');

                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "✅ Success",
                            text: response.message,
                            timer: 1500,
                            showConfirmButton: false
                        });

                        $("#addProductModal").modal("hide");
                        $("#productForm")[0].reset();
                        $("input[name='finalprice']").val("");
                    } else {
                        Swal.fire("❌ Failed", response.message, "error");
                    }
                },

                error: function () {
                    $(".btn-custom").prop("disabled", false)
                        .html('<i class="fas fa-check-circle me-2"></i> Save Product');

                    Swal.fire("❌ Error", "Something went wrong!", "error");
                }
            });
        });

    });



