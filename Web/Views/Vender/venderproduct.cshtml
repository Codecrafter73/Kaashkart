<!-- Add Product Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content border-0 shadow-lg rounded-4">

            <div class="modal-header bg-success text-white rounded-top-4">
                <h3 class="modal-title fs-3 text-light">
                    <i class="fas fa-plus-circle me-2 "></i> Add New Product
                </h3>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-5">
                <form id="productForm" enctype="multipart/form-data">
                    <div class="row g-4">

                        <div class="col-md-4">
                            <label class="form-label fw-bold">Vender Id</label>
                            <input type="text" name="vendorid" class="form-control" value="@ViewBag.VendorId" readonly />

                        </div>
                        <!-- Category -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Select Category</label>
                            <select class="form-select form-select-lg fs-3" name="categoryname" required>
                                <option value="">Choose category...</option>
                                @foreach (var cat in ViewBag.Categories)
                                {
                                    <option value="@cat.categoryname">@cat.categoryname</option>
                                }
                            </select>
                        </div>

                        <!-- Product Name -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Product Name</label>
                            <input type="text" class="form-control form-control-lg"
                                   name="productname"
                                   placeholder="Enter product name" required>
                        </div>

                        <!-- Price -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Price (₹)</label>
                            <input type="number" class="form-control form-control-lg"
                                   name="price" step="0.01" placeholder="0.00" required>
                        </div>

                        <!-- Discount -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Discount (%)</label>
                            <input type="number" class="form-control form-control-lg"
                                   name="discount" step="0.01" placeholder="0">
                        </div>

                        <!-- Final Price -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Final Price</label>
                            <input type="text" class="form-control form-control-lg bg-light"
                                   name="finalprice" readonly placeholder="Auto calculated">
                        </div>

                        <!-- Stock -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Stock Quantity</label>
                            <input type="number" class="form-control form-control-lg"
                                   name="StockQuantity"
                                   placeholder="Enter stock" min="0">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-bold">Unit Value</label>
                            <input type="number" class="form-control form-control-lg"
                                   name="unitquantity"
                                   placeholder="Enter Unit Value" min="0">
                        </div>

                        <!-- Unit -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Unit</label>
                            <select class="form-control form-control-lg fs-3" name="unit" required>
                                <option value="">-- Select Unit --</option>
                                <option value="Piece">Piece (pcs)</option>
                                <option value="Kg">Kg</option>
                                <option value="Gram">Gram</option>
                                <option value="Litre">Litre</option>
                                <option value="Packet">Packet</option>
                            </select>
                        </div>

                        <!-- Product Image -->
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Product Image</label>
                            <input type="file" class="form-control form-control-lg fs-3"
                                   name="ProductImageFile" accept="image/*">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Product Sub Image</label>
                            <input type="file" class="form-control form-control-lg fs-3"
                                   name="productsubimageupload" multiple accept="image/*">
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label class="form-label fw-bold">Description</label>
                            <textarea class="form-control form-control-lg fs-3"
                                      name="description" rows="3" style="height:70px !important;"
                                      placeholder="Write description..."></textarea>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-success btn-lg px-5 p-3 fs-3 fw-bold">
                            <i class="fas fa-check-circle me-2"></i> Save Product
                        </button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>





