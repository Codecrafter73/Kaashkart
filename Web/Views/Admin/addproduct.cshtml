<script src="https://cdn.ckeditor.com/ckeditor5/39.0.2/classic/ckeditor.js"></script>

<script>
    const editors = ['descriptionEditor', 'ingradient', 'usageInfo', 'benefits', 'storageInfo', 'faq'];

    editors.forEach(id => {
        ClassicEditor
            .create(document.querySelector('#' + id))
            .catch(error => console.error(error));
    });


    $(document).ready(function () {

        // फ़ाइनल प्राइस (Final Price) को कैलकुलेट करने का फंक्शन
        function calculateFinalPrice(row) {
            const $row = $(row);
            const price = parseFloat($row.find('.price').val()) || 0;
            const discount = parseFloat($row.find('.discount').val()) || 0;

            let finalPrice = price;
            if (discount > 0 && discount <= 100) {
                // Final Price = Price - (Price * Discount / 100)
                finalPrice = price - (price * discount / 100);
            }

            $row.find('.final-price').val(finalPrice.toFixed(2));
        }

        // Price और Discount बदलने पर Final Price को तुरंत कैलकुलेट करें
        $('#dynamicRows').on('keyup change', '.price, .discount', function () {
            calculateFinalPrice($(this).closest('.product-row'));
        });

        // --- डायनेमिक रो (Dynamic Row) लॉजिक ---
        $('#addRowBtn').on('click', function () {
            const newRow = `
            <tr class="product-row">
                <td><input type="number" class="form-control qty" name="unitquantity[]" placeholder="Qty" min="0" required></td>
                <td>
                    <select class="form-control unit" name="unit[]" required>
                        <option value="">--Unit--</option>
                        <option value="kg">Kg</option>
                        <option value="g">Gram</option>
                    </select>
                </td>
                <td><input type="number" class="form-control price" name="price[]" placeholder="0.00" min="0.01" step="0.01" required></td>
                <td><input type="number" class="form-control discount" name="discount[]" placeholder="0" min="0" max="100"></td>
                <td><input type="text" class="form-control bg-light final-price" name="finalprice[]" readonly placeholder="Auto"></td>
                <td><input type="number" class="form-control stock" name="stock_quantity[]" placeholder="Stock" min="0" required></td>
                <td class="text-center">
                    <button type="button" class="btn btn-danger btn-sm p-2 fs-2 removeRowBtn" style="width:50px;">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        `;
            $('#dynamicRows').append(newRow);
        });

        // रो (Row) हटाने का लॉजिक
        $('#dynamicRows').on('click', '.removeRowBtn', function () {
            if ($('#dynamicRows .product-row').length > 1) {
                $(this).closest('.product-row').remove();
            } else {
                alert('You must have at least one product row.');
            }
        });

        // --- फॉर्म सबमिशन वैलिडेशन ---
        $('#productForm').on('submit', function (e) {
            let isValid = true;

            // 1. सामान्य ज़रूरी फ़ील्ड (Basic Required Fields)
            $(this).find('input[required], select[required], textarea[required]').each(function () {
                if ($(this).val().trim() === '') {
                    $(this).addClass('is-invalid');
                    isValid = false;
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            // 2. प्राइस/स्टॉक टेबल वैलिडेशन (Price/Stock Table Validation)
            $('#dynamicRows .product-row').each(function (index, row) {
                const $row = $(row);
                const qty = $row.find('.qty').val();
                const unit = $row.find('.unit').val();
                const price = $row.find('.price').val();
                const stock = $row.find('.stock').val();

                if (!qty || !unit || !price || !stock) {
                    alert(`Error in Product Variation Row ${index + 1}: Quantity, Unit, Price, and Stock are required.`);
                    isValid = false;
                }
            });

            // 3. इमेज साइज़ और टाइप वैलिडेशन (Image Size and Type Validation)
            const maxFileSize = 50 * 1024 * 1024; // 50 MB
            const allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/jpg', 'image/webp'];

            // मेन इमेज (Main Image)
            const mainImage = $('input[name="productimage"]').prop('files')[0];
            if (mainImage) {
                if (mainImage.size > maxFileSize) {
                    alert('Product Image size must be less than 50 MB.');
                    isValid = false;
                } else if (!allowedTypes.includes(mainImage.type)) {
                    alert('Product Image must be JPEG, PNG, GIF, or WEBP format.');
                    isValid = false;
                }
            }

            // सब इमेज (Sub Images) - अब size validation भी active है
            const subImages = $('input[name="productsubimageupload"]').prop('files');
            if (subImages.length > 0) {
                for (let i = 0; i < subImages.length; i++) {
                    if (subImages[i].size > maxFileSize) {
                        alert(`Sub Image ${i + 1} size must be less than 50 MB.`);
                        isValid = false;
                        break;
                    } else if (!allowedTypes.includes(subImages[i].type)) {
                        alert(`Sub Image ${i + 1} must be JPEG, PNG, GIF, or WEBP format.`);
                        isValid = false;
                        break;
                    }
                }
            }

            if (!isValid) {
                e.preventDefault(); // फॉर्म को सबमिट होने से रोकें
                // पहले इनवैलिड फ़ील्ड तक स्क्रॉल करें
                $('html, body').animate({
                    scrollTop: $('.is-invalid:first').offset().top - 50
                }, 500);
            }
        });

        // फ़ील्ड बदलने पर real-time invalid क्लास हटाएँ
        $('#productForm').on('change keyup', 'input, select, textarea', function () {
            if ($(this).val().trim() !== '') {
                $(this).removeClass('is-invalid');
            } else if ($(this).prop('required')) {
                $(this).addClass('is-invalid');
            }
        });

        // पेज लोड होने पर Final Price की कैलकुलेशन को ट्रिगर करें
        $('#dynamicRows .product-row').each(function () {
            calculateFinalPrice(this);
        });

    });
</script>

