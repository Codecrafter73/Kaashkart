<!-- Add Product Modal -->
<div class="card p-5 rounded">
    <div class="card-body ">
        <form id="productForm" method="post" enctype="multipart/form-data" action="/Admin/addproduct">


            <div class="row g-4">

                <!-- Category -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Select Category</label>
                    <select class="form-select form-select-lg fs-3" name="categoryname" required>
                        <option value="">Choose category...</option>
                        @foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat.categoryname">@cat.categoryname</option>
                        }
                    </select>
                </div>

                <!-- Product Name -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Product Name</label>
                    <input type="text" class="form-control form-control-lg"
                           name="productname"
                           placeholder="Enter product name" required>
                </div>

                <!-- Product Image -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Product Image</label>
                    <input type="file" class="form-control form-control-lg fs-3"
                           name="productimage" accept="image/*">
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Product Sub Image</label>
                    <input type="file" class="form-control form-control-lg fs-3"
                           name="productsubimageupload" multiple accept="image/*">
                </div>


                <table class="table table-bordered align-middle mt-5">
                    <thead class="table-success text-center">
                        <tr>
                            <th style="width: 10%">N. Quantity</th>
                            <th style="width: 10%">Unit</th>
                            <th style="width: 15%">Original Price (₹)</th>
                            <th style="width: 10%">Discount (%)</th>
                            <th style="width: 15%">Final Price</th>
                            <th style="width: 15%">Stock Qty</th>
                            <th style="width: 10%">Action</th>
                        </tr>
                    </thead>

                    <tbody id="dynamicRows">
                        <tr class="product-row">

                            <td>
                                <input type="number" class="form-control qty"
                                       name="unitquantity[]" placeholder="Qty" min="0">
                            </td>

                            <td>
                                <select class="form-control unit" name="unit[]" required>
                                    <option value="">--Unit--</option>
                                    <option value="kg">Kg</option>
                                    <option value="g">Gram</option>
                                </select>
                            </td>

                            <td>
                                <input type="number" class="form-control price"
                                       name="price[]" placeholder="0.00">
                            </td>

                            <td>
                                <input type="number" class="form-control discount"
                                       name="discount[]" placeholder="0">
                            </td>

                            <td>
                                <input type="text" class="form-control bg-light final-price"
                                       name="finalprice[]" readonly placeholder="Auto">
                            </td>

                            <td>
                                <input type="number" class="form-control stock"
                                       name="stock_quantity[]" placeholder="Stock" min="0">
                            </td>

                            <td class="text-center">
                                <!-- FIRST ROW BUTTON -->
                                <button type="button" id="addRowBtn" class="btn btn-primary btn-sm p-2 fs-2" style="width:50px;">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </td>

                        </tr>
                    </tbody>

                </table>

                <div class="col-md-12">
                    <label class="form-label fw-bold">Tag Line</label>
                    <input type="text" class="form-control form-control-lg"
                           name="tagline"
                           placeholder="Enter Tag Line" required>
                </div>



                <div class="col-md-6">
                    <label class="form-label fw-bold">Product Description</label>
                    <textarea id="descriptionEditor"
                              class="form-control form-control-lg fs-3"
                              name="description"
                              rows="5"
                              style="max-height:100px !important;"
                              placeholder="Write description..."></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Product Ingradient</label>
                    <textarea id="ingradient"
                              class="form-control form-control-lg fs-3"
                              name="ingradient"
                              rows="3"
                              style="height:70px !important;"
                              placeholder="Write ingradient..."></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Usage Info</label>
                    <textarea id="usageInfo"
                              class="form-control form-control-lg fs-3"
                              name="usageinfo"
                              rows="3"
                              placeholder="Write usage info..."></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Benefits</label>
                    <textarea id="benefits"
                              class="form-control form-control-lg fs-3"
                              name="benefits"
                              rows="3"
                              placeholder="Write benefits..."></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Storage Info</label>
                    <textarea id="storageInfo"
                              class="form-control form-control-lg fs-3"
                              name="storageinfo"
                              rows="3"
                              placeholder="Write storage info..."></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">FAQ</label>
                    <textarea id="faq"
                              class="form-control form-control-lg fs-3"
                              name="faq"
                              rows="15"
                              style="height:300px !important; resize: vertical;"
                              placeholder="Write FAQ..."></textarea>
                </div>




            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success btn-lg px-5 p-3 w-25 fs-3 fw-bold">
                    <i class="fas fa-check-circle me-2"></i> Save Product
                </button>
            </div>
        </form>

    </div>

</div>







