@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    :root {
        --color-primary: #177e3f;
        --color-primary-dark: #0f5a2b;
        --color-success: #48bb78;
        --color-warning: #f59e0b;
        --color-info: #3b82f6;
        --shadow-sm: 0 2px 8px rgba(0,0,0,0.06);
        --shadow-md: 0 4px 16px rgba(0,0,0,0.1);
        --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    }

    .payment-wrapper {
        background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);
        min-height: 100vh;
        padding: 40px 20px 60px;
    }

    .payment-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Page Header */
    .payment-header {
        text-align: center;
        margin-bottom: 50px;
        padding-bottom: 20px;
        border-bottom: 3px solid var(--color-primary);
    }

    .payment-header h1 {
        font-size: 36px;
        font-weight: 800;
        color: var(--color-primary);
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .payment-header p {
        font-size: 16px;
        color: #64748b;
        margin: 0;
    }

    /* Progress Steps */
    .progress-steps {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
        padding: 0 20px;
        position: relative;
    }

    .progress-steps::before {
        content: '';
        position: absolute;
        top: 25px;
        left: 15%;
        right: 15%;
        height: 3px;
        background: #e2e8f0;
        z-index: 0;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 1;
    }

    .step-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: #fff;
        border: 3px solid #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: #94a3b8;
        margin-bottom: 10px;
        transition: all 0.3s ease;
    }

    .step.active .step-icon {
        background: var(--color-primary);
        border-color: var(--color-primary);
        color: white;
        box-shadow: 0 0 0 8px rgba(23, 126, 63, 0.1);
        animation: pulse 2s infinite;
    }

    .step.completed .step-icon {
        background: var(--color-success);
        border-color: var(--color-success);
        color: white;
    }

    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 0 0 8px rgba(23, 126, 63, 0.1);
        }
        50% {
            box-shadow: 0 0 0 12px rgba(23, 126, 63, 0.05);
        }
    }

    .step-label {
        font-size: 13px;
        font-weight: 600;
        color: #94a3b8;
        text-align: center;
    }

    .step.active .step-label,
    .step.completed .step-label {
        color: var(--color-primary);
    }

    /* Main Grid */
    .payment-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 30px;
        align-items: start;
    }

    @@media (max-width: 992px) {
        .payment-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Cards */
    .payment-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: var(--shadow-md);
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
        margin-bottom: 25px;
    }

    .payment-card:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    /* Card Header */
    .card-header-custom {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f1f5f9;
    }

    .card-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--color-primary), var(--color-success));
        color: white;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .card-title {
        font-size: 20px;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
        flex: 1;
    }

    /* Product Items */
    .product-list {
        max-height: 400px;
        overflow-y: auto;
        padding-right: 10px;
    }

    .product-list::-webkit-scrollbar {
        width: 6px;
    }

    .product-list::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 10px;
    }

    .product-list::-webkit-scrollbar-thumb {
        background: var(--color-primary);
        border-radius: 10px;
    }

    .product-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: #f8fafc;
        border-radius: 12px;
        margin-bottom: 12px;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
    }

    .product-item:hover {
        background: #f0fdf4;
        border-color: var(--color-primary);
        transform: translateX(5px);
    }

    .product-item img {
        width: 70px;
        height: 70px;
        border-radius: 10px;
        object-fit: cover;
        border: 2px solid #e2e8f0;
        flex-shrink: 0;
    }

    .product-info {
        flex: 1;
    }

    .product-name {
        font-size: 16px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 6px;
    }

    .product-details {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 14px;
        color: #64748b;
    }

    .product-qty {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        background: var(--color-primary);
        color: white;
        border-radius: 6px;
        font-weight: 600;
        font-size: 13px;
    }

    .product-price {
        font-weight: 700;
        color: var(--color-primary);
        font-size: 16px;
    }

    /* Summary Lines */
    .summary-section {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 2px dashed #e2e8f0;
    }

    .summary-line {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        font-size: 15px;
    }

    .summary-label {
        color: #64748b;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .summary-value {
        color: #1e293b;
        font-weight: 700;
        font-size: 16px;
    }

    .summary-value.free {
        color: var(--color-success);
    }

    /* Grand Total */
    .total-line {
        background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
        border: 2px solid var(--color-primary);
        border-radius: 12px;
        padding: 18px;
        margin-top: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .total-label {
        font-size: 18px;
        font-weight: 700;
        color: var(--color-primary-dark);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .total-value {
        font-size: 28px;
        font-weight: 800;
        color: var(--color-primary);
    }

    /* Delivery Address */
    .address-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        padding: 15px;
        background: #f8fafc;
        border-radius: 10px;
        border-left: 4px solid var(--color-primary);
        margin-bottom: 15px;
    }

    .address-icon {
        width: 36px;
        height: 36px;
        background: var(--color-primary);
        color: white;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        flex-shrink: 0;
    }

    .address-content {
        flex: 1;
    }

    .address-label {
        font-size: 13px;
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
    }

    .address-value {
        font-size: 16px;
        color: #1e293b;
        font-weight: 600;
        line-height: 1.5;
    }

    /* Change Address Button */
    .change-address-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #f1f5f9;
        color: var(--color-primary);
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .change-address-btn:hover {
        background: var(--color-primary);
        color: white;
        border-color: var(--color-primary);
        transform: translateY(-2px);
        text-decoration: none;
    }

    /* Payment Methods */
    .payment-methods {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
        margin-top: 20px;
    }

    .payment-method {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: #f8fafc;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .payment-method:hover {
        background: #f0fdf4;
        border-color: var(--color-primary);
        transform: translateY(-3px);
        box-shadow: var(--shadow-md);
    }

    .payment-method.selected {
        background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
        border-color: var(--color-primary);
    }

    .payment-method-icon {
        font-size: 32px;
        color: var(--color-primary);
        margin-bottom: 10px;
    }

    .payment-method-name {
        font-size: 14px;
        font-weight: 600;
        color: #1e293b;
        text-align: center;
    }

    /* Payment Button */
    .pay-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        width: 100%;
        background: linear-gradient(135deg, var(--color-primary), var(--color-success));
        color: white;
        padding: 18px 30px;
        text-align: center;
        border-radius: 12px;
        font-size: 18px;
        font-weight: 700;
        margin-top: 20px;
        border: none;
        box-shadow: 0 10px 30px rgba(23, 126, 63, 0.3);
        transition: all 0.3s ease;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .pay-btn:hover {
        background: linear-gradient(135deg, var(--color-primary-dark), var(--color-primary));
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(23, 126, 63, 0.4);
        color: white;
        text-decoration: none;
    }

    .pay-btn i {
        font-size: 20px;
    }

    /* Security Badge */
    .security-badge {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px;
        background: #f0fdf4;
        border-radius: 10px;
        margin-top: 15px;
        border: 1px solid #bbf7d0;
    }

    .security-badge i {
        font-size: 24px;
        color: var(--color-success);
    }

    .security-badge-text {
        flex: 1;
    }

    .security-badge-text strong {
        display: block;
        font-size: 14px;
        color: var(--color-primary);
        margin-bottom: 2px;
    }

    .security-badge-text span {
        font-size: 12px;
        color: #64748b;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-icon {
        font-size: 80px;
        color: #cbd5e0;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        font-size: 24px;
        font-weight: 700;
        color: #475569;
        margin-bottom: 12px;
    }

    .empty-state p {
        font-size: 16px;
        color: #94a3b8;
    }

    /* Sticky Sidebar */
    .sticky-sidebar {
        position: sticky;
        top: 20px;
    }

    /* Order Summary Badge */
    .item-count-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: var(--color-primary);
        color: white;
        border-radius: 20px;
        padding: 4px 12px;
        font-size: 13px;
        font-weight: 700;
        margin-left: 10px;
    }
</style>

<div class="payment-wrapper">
