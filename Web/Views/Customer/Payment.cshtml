                            </span>
                            <span class="total-value">₹<span id="grandTotalAmount">0</span></span>
                        </div>
                    </div>
                </div>

                <!-- Delivery Address -->
                <div class="payment-card">
                    <div class="card-header-custom">
                        <div class="card-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <h2 class="card-title">Delivery Address</h2>
                        <a href="/Customer/Profile" class="change-address-btn">
                            <i class="fas fa-edit"></i>
                            Change
                        </a>
                    </div>

                    <div class="address-item">
                        <div class="address-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="address-content">
                            <div class="address-label">Full Name</div>
                            <div class="address-value">@Session["UserName"]</div>
                        </div>
                    </div>

                    <div class="address-item">
                        <div class="address-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="address-content">
                            <div class="address-label">Phone Number</div>
                            <div class="address-value">@Session["Mobile"]</div>
                        </div>
                    </div>

                    <div class="address-item">
                        <div class="address-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="address-content">
                            <div class="address-label">Delivery Address</div>
                            <div class="address-value">@Session["Address"]</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Payment Options -->
            <div class="sticky-sidebar">
                <div class="payment-card">
                    <div class="card-header-custom">
                        <div class="card-icon">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <h2 class="card-title">Payment Method</h2>
