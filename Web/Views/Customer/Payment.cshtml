                        <i class="fas fa-shield-alt"></i>
                        <div class="security-badge-text">
                            <strong>100% Secure Payment</strong>
                            <span>Your payment information is protected with bank-level security</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // Load cart data
    function loadCartForPayment() {
        let userId = '@Session["UserId"]';
        let key = "cart_user_" + userId;
        let cart = localStorage.getItem(key);
        return cart ? JSON.parse(cart) : [];
    }

    // Render order summary
    function renderPaymentSummary() {
        let cart = loadCartForPayment();
        let orderBox = document.getElementById("orderItems");

        if (cart.length === 0) {
            orderBox.innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-shopping-basket"></i>
                    </div>
                    <h3>Your cart is empty</h3>
                    <p>Add some items to proceed with payment</p>
                </div>
            `;
            document.getElementById("itemCountBadge").innerText = "0";
            return;
        }

        let html = "";
        let total = 0;

        cart.forEach(item => {
            let t = item.price * item.qty;
            total += t;

            html += `
                <div class="product-item">
                    <img src="${item.image}" alt="${item.name}">
                    <div class="product-info">
                        <div class="product-name">${item.name}</div>
                        <div class="product-details">
                            <span class="product-qty">
                                <i class="fas fa-times"></i> ${item.qty}
                            </span>
                            <span>•</span>
                            <span class="product-price">₹${item.price}</span>
                        </div>
                    </div>
                </div>
            `;
        });

        orderBox.innerHTML = html;

        document.getElementById("subtotalAmount").innerText = total.toFixed(2);
        document.getElementById("grandTotalAmount").innerText = total.toFixed(2);
        document.getElementById("itemCountBadge").innerText = cart.length;
    }

    // Payment method selection
    document.addEventListener("DOMContentLoaded", function() {
        renderPaymentSummary();

        // Payment method selector
        document.querySelectorAll('.payment-method').forEach(method => {
            method.addEventListener('click', function() {
                document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
                this.classList.add('selected');
            });
        });
    });

    // Process Payment
    function processPayment() {
        let cart = loadCartForPayment();

        if (cart.length === 0) {
            Swal.fire({
                icon: "warning",
                title: "Cart is Empty!",
                text: "Please add items to your cart first.",
                confirmButtonColor: "#177e3f"
            });
            return;
        }

        let selectedMethod = document.querySelector('.payment-method.selected');
        let methodName = selectedMethod ? selectedMethod.querySelector('.payment-method-name').textContent : 'Cash on Delivery';

        Swal.fire({
            title: "Processing Payment...",
            html: `
                <div style="padding: 20px;">
                    <i class="fas fa-spinner fa-spin" style="font-size: 48px; color: #177e3f;"></i>
                    <p style="margin-top: 20px; font-size: 16px;">Payment Method: <strong>${methodName}</strong></p>
                    <p style="color: #64748b;">Please wait while we process your order...</p>
                </div>
            `,
            showConfirmButton: false,
            allowOutsideClick: false,
            timer: 2000
        });

        setTimeout(() => {
            // Clear cart after successful payment
            let userId = '@Session["UserId"]';
            let key = "cart_user_" + userId;
            localStorage.removeItem(key);

            // Update header cart
            if (typeof renderCart === 'function') {
                renderCart();
            }

            window.location.href = "/Customer/OrderSuccess";
        }, 2000);
    }
</script>