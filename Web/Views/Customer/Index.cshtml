    <script>
        $(document).ready(function () {

            // When any category link is clicked
            $(".category-link").on("click", function () {
                var category = $(this).data("category");

                // Remove 'active' from all links, add to current one
                $(".category-link").removeClass("active");
                $(this).addClass("active");

                // Show loader and hide product container
                $("#loader").show();
                $("#productContainer").hide();

                // AJAX call to fetch category-wise products
                $.ajax({
                    url: '/Customer/ProductListPartial',
                    type: 'GET',
                    data: { categoryname: category },
                    success: function (html) {
                        $("#loader").hide();
                        $("#productContainer").html(html).fadeIn();
                    },
                    error: function () {
                        $("#loader").hide();
                        $("#productContainer").html('<p class="text-center text-danger">⚠️ Error loading products.</p>').fadeIn();
                    }
                });
            });
        });



        document.addEventListener("DOMContentLoaded", function () {

            document.querySelectorAll(".addToCartBtn").forEach(btn => {

                btn.addEventListener("click", function (e) {
                    e.preventDefault();

                    let productId = this.dataset.id;
                    let productName = this.dataset.name;
                    let productPrice = this.dataset.price;
                    let productImage = this.dataset.image;
                    let productUnit = this.dataset.unit || "1 pc";

                    // Call function to add cart
                    addToCart(productId, productName, productPrice, productImage, productUnit);
                });
            });

        });



        $(document).on('click', '.addToCartBtn', function () {

            var id = $(this).data("id");

            $.ajax({
                url: '/Customer/AddToCart',
                type: 'POST',
                data: { productId: id, qty: 1 },
                success: function (response) {

                },
                error: function () {
                    alert("Error adding to cart");
                }
            });

        });

        $(document).ready(function () {
            // Unit dropdown change होने पर price update करें
            $('.unit-selector').on('change', function () {
                const selectedIndex = parseInt($(this).val());
                const card = $(this).closest('.single-shopping-card-one');

                // Get price arrays from data attributes
                const finalPrices = $(this).data('prices');
                const originalPrices = $(this).data('original-prices');
                const discounts = $(this).data('discounts');

                // Update prices
                if (finalPrices && finalPrices[selectedIndex] !== undefined) {
                    card.find('.current-price').text('₹' + finalPrices[selectedIndex]);
                }

                if (originalPrices && originalPrices[selectedIndex] !== undefined) {
                    card.find('.original-price').text('₹' + originalPrices[selectedIndex]);
                }

                // Update discount badge
                if (discounts && discounts[selectedIndex] !== undefined) {
                    const discountValue = Math.round(discounts[selectedIndex]);
                    card.find('.discount-badge').html(discountValue + '% <br /> Off');
                }
            });
        });
    </script>
