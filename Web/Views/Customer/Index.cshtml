        <div class="container product-grid-container">
            <div class="row">
                @foreach (var p in ViewBag.gettopproduct)
                {
                    string mainImg = "/Content/no-image.png";
                    if (!string.IsNullOrEmpty(p.ProductImagePath))
                    {
                        mainImg = "/Content/AdminFile/Products/mainimages/" + p.ProductImagePath;
                    }

                    decimal displayPrice = p.Price != null && p.Price.Count > 0 ? p.Price[0] : 0;
                    decimal displayFinalPrice = p.FinalPrice != null && p.FinalPrice.Count > 0 ? p.FinalPrice[0] : displayPrice;
                    int displayDiscount = p.Discount != null && p.Discount.Count > 0 ? Convert.ToInt32(p.Discount[0]) : 0;

                    // Combine unit and quantity
                    List<string> unitsCombined = new List<string>();
                    if (p.UnitQuantity != null && p.Unit != null && p.UnitQuantity.Count == p.Unit.Count)
                    {
                        for (int i = 0; i < p.UnitQuantity.Count; i++)
                        {
                            unitsCombined.Add(p.UnitQuantity[i] + " " + p.Unit[i]);
                        }
                    }
                    string displayUnit = unitsCombined.Count > 0 ? unitsCombined[0] : "";

                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6 product-card-wrapper">
                        <div class="single-shopping-card-one" data-product-id="@p.ProductId">

                            <!-- Image Section -->
                            <div class="image-and-action-area-wrapper">
                                <a href="@Url.Action("productdetails", "Customer", new { id = p.ProductId })" class="thumbnail-preview">
                                    <div class="badge">
                                        <span class="discount-badge-@p.ProductId">@displayDiscount% Off</span>
                                    </div>
                                    <img src="@mainImg" alt="@p.ProductName" />
                                </a>

                                @*<div class="action-share-option">
                                    <div class="single-action openuptip message-show-action" data-flow="up" title="Add To Wishlist">
                                        <i class="fa-light fa-heart"></i>
                                    </div>
                                    <div class="single-action openuptip" data-flow="up" title="Compare" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        <i class="fa-solid fa-arrows-retweet"></i>
                                    </div>
                                    <div class="single-action openuptip cta-quickview product-details-popup-btn" data-flow="up" title="Quick View">
                                        <i class="fa-regular fa-eye"></i>
                                    </div>
                                </div>*@
                            </div>
                            <!-- Image Section End -->
                            <!-- Body Content -->
                            <div class="body-content">
                                <a href="@Url.Action("productdetails", "Customer", new { id = p.ProductId })">
                                    <h4 class="title fs-3">@p.ProductName</h4>
                                    @if (!string.IsNullOrEmpty(p.tagline))
                                    {
                                        <span class="mb-3">@p.tagline</span>
                                    }
                                </a>

                                <div class="price-area">
                                    <span class="current current-price-@p.ProductId">₹@displayFinalPrice</span>
                                    <div class="previous original-price-@p.ProductId">₹@displayPrice</div>
                                </div>

                                <div class="custom-dropdown-wrapper">
                                    <select class="custom-unit-select"
                                            onchange="updatePrice@(p.ProductId)(this)">
                                        @if (unitsCombined.Count > 0 && p.Price != null && p.FinalPrice != null)
                                        {
                                            for (int i = 0; i < unitsCombined.Count; i++)
                                            {
                                                var finalPrice = i < p.FinalPrice.Count ? p.FinalPrice[i] : 0;
                                                var originalPrice = i < p.Price.Count ? p.Price[i] : 0;
                                                var discount = i < p.Discount.Count ? p.Discount[i] : 0;

                                                <option value="@i"
                                                        data-finalprice="@finalPrice"
                                                        data-originalprice="@originalPrice"
                                                        data-discount="@discount">
                                                    @unitsCombined[i]
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>


                                <script>
                            function updatePrice@(p.ProductId)(selectElement) {
                                var selectedOption = selectElement.options[selectElement.selectedIndex];
                                var finalPrice = selectedOption.getAttribute('data-finalprice');
                                var originalPrice = selectedOption.getAttribute('data-originalprice');
                                var discount = selectedOption.getAttribute('data-discount');

                                // Update prices
                                document.querySelector('.current-price-@p.ProductId').textContent = '₹' + finalPrice;
                                document.querySelector('.original-price-@p.ProductId').textContent = '₹' + originalPrice;

                                // Update discount badge
                                if (discount && discount > 0) {
                                    document.querySelector('.discount-badge-@p.ProductId').textContent = Math.round(discount) + '% Off';
                                }
                            }
                                </script>

                                <div class="quantity-edit">
                                    <button class="add-to-cart-btn"
                                            data-id="@p.ProductId"
                                            data-name="@p.ProductName"
                                            data-price="@displayFinalPrice"
                                            data-image="@mainImg">
                                        <i class="fa-regular fa-cart-shopping"></i>
                                        <span class="text-light">Add to Cart</span>
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>



